{
  "overrides": [
    {
      "files": "*.svelte",
      "options": {
        "parser": "svelte",
        "bracketSameLine": true
      }
    }
  ],
  "trailingComma": "none",
  "useTabs": false,
  "bracketSpacing": true,
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "arrowParens": "always",
  "printWidth": 120,
  "htmlWhitespaceSensitivity": "ignore"
}
